{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Rune",
  "version": "0.1.4",
  "identifier": "com.runeapp.ai",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Rune",
        "width": 150,
        "height": 40,
        "visible": false,
        "transparent": true,
        "decorations": false,
        "alwaysOnTop": true
      },
      {
        "label": "settings",
        "title": "Rune Settings",
        "url": "settings",
        "width": 800,
        "height": 800,
        "visible": false
      },
      {
        "label": "history",
        "title": "Rune History",
        "url": "history",
        "width": 800,
        "height": 600,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": ["models/**/*", "icons/tray-icon.ico"],
    "macOS": {
      "providerShortName": "Apple",
      "signingIdentity": "4T3ZXB8C4V",
      "entitlements": "Entitlements.plist"
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
